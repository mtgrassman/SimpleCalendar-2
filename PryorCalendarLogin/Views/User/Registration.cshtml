@model PryorCalendarLogin.Models.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Create user failed.");
    <div>
        <fieldset>
            <legend>Create New User</legend>
            <div>@Html.LabelFor(u => u.User_Name)</div>
            <div>@Html.TextBoxFor(u => u.User_Name)
                @Html.ValidationMessageFor(u => u.User_Name)
            </div>

            <div>@Html.LabelFor(u => u.First_Name)</div>
            <div>@Html.TextBoxFor(u => u.First_Name)
                </div>

                <div>@Html.LabelFor(u => u.Last_Name)</div>
            <div>@Html.TextBoxFor(u => u.Last_Name)
                </div>

                <div>@Html.LabelFor(u => u.Phone_Num)</div>
            <div>@Html.TextBoxFor(u => u.Phone_Num)
                </div>

                <div>@Html.LabelFor(u => u.Email)</div>
            <div>@Html.TextBoxFor(u => u.Email)
                </div>

            <div>@Html.LabelFor(u => u.Password)</div>
            <div>@Html.PasswordFor(u => u.Password)
                @Html.ValidationMessageFor(u => u.Password)
            </div>

            <input type="submit" value="Create User" />

        </fieldset>
    </div>
}