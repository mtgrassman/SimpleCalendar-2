<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.calendar-widget.js"></script>
</head>
<body>

    <div style="width: auto; background-color:red; font-size: 33px; font-weight:700;">
        @if (Request.IsAuthenticated) {
            <strong>@Html.Encode(User.Identity.Name)</strong>
            @Html.ActionLink("Log Out", "LogOut", "User")
                                        }
        else {
            @Html.ActionLink("Registration", "Registration", "User")
            <span>|</span>
            @Html.ActionLink("Log In", "LogIn", "User")
        }
    </div>

    @RenderBody()
    @RenderSection("scripts", required: false)
</body>
</html>
